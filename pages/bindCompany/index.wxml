<!-- index.wxml -->
<view class="container">
  <van-cell-group style="width:100%;">
    <van-field value="{{ selectedCompany.companyName }}" label="公司名称" placeholder="选择公司名称" bind:click-icon="jump2SearchCompanyPage" bind:focus="jump2SearchCompanyPage" error-message="{{errorMsg.company}}" required right-icon="search" />
    <van-field value="{{ realName }}" label="姓名" placeholder="请输入真实姓名" error-message="{{errorMsg.realName}}" data-name="realName" required bind:blur="validOnBlur" />
    <van-field value="{{ idNumber }}" label="手机号" placeholder="请输入身份证号" error-message="{{errorMsg.idNumber}}" data-name="idNumber" required bind:blur="validOnBlur" />
  </van-cell-group>
</view>